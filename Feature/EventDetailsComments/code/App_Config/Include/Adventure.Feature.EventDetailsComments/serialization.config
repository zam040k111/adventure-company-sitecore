<!--
	Event details comments serialization settings
-->
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">

	<sitecore>
		<unicorn>
			<configurations>

				<configuration name="Feature.EventDetailsComments" extends="Helix.Base" dependencies="Foundation.*">
					<predicate>
						<include name="Renderings" database="master" path="/sitecore/layout/Renderings/Feature/EventDetailsComments" />
						<include name="Field rules" database="master" path="/sitecore/system/Settings/Validation Rules/Field Rules/Feature/EventDetailsComments" />
						<include name="Templates" database="master" path="/sitecore/templates/Feature/EventDetailsComments" />
						<include name="Content" database="master" path="/sitecore/content/Components/Comments" />
					</predicate>

				</configuration>

			</configurations>
		</unicorn>
	</sitecore>
</configuration>
